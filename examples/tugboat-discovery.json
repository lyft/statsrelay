{
    "statsd": {
        "servers": {
            "default": {
                "bind": "127.0.0.1:8129",
                "socket": "/tmp/statsrelay"
            }
        },
        "backends": {
            "simple": {
                "shard_map": [
                    "127.0.0.1:8122"
                ]
            },
            "path_discovery": {
                "shard_map_source": "path_discovery"
            }
        }
    },
    "discovery": {
        "sources": {
            "path_discovery": {
                "type": "static_file",
                "path": "examples/source-example1.json",
                "interval": 5,
                "transforms": [
                    {
                        "type": "repeat",
                        "count": 2
                    },
                    {
                        "type": "format",
                        "pattern": "{}:cheese"
                    },
                    {
                        "type": "format",
                        "pattern": "{}:cheese2"
                    }
                ]
            }
        }
    }
}
