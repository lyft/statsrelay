
{
    "admin": {
        "port": 9001
    },
    "processors": {
        "tag": {
            "type": "tag_converter",
            "route": ["processor:cardinality"]
        },
        "cardinality": {
            "type": "cardinality",
            "route": ["statsd:simple"],
            "size_limit": 100,
            "rotate_after_seconds": 10,
            "buckets": 3
        }
    },
    "statsd": {
        "servers": {
            "default": {
                "bind": "127.0.0.1:8129",
                "route": ["processor:tag"]
            }
        },
        "backends": {
            "simple": {
                "shard_map": [
                    "127.0.0.1:8122"
                ]
            }
        }
    }
}
